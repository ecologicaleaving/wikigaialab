{
  "name": "wikigaialab",
  "version": "0.1.0",
  "private": true,
  "description": "Community-driven problem solving platform",
  "keywords": [
    "nextjs",
    "supabase",
    "ai",
    "community",
    "voting"
  ],
  "author": "WikiGaiaLab Team",
  "license": "MIT",
  "workspaces": [
    "apps/*",
    "packages/*"
  ],
  "scripts": {
    "dev": "pnpm --filter @wikigaialab/web dev",
    "build": "pnpm -r build",
    "start": "pnpm --filter @wikigaialab/web start",
    "lint": "pnpm -r lint",
    "lint:fix": "pnpm -r lint --fix",
    "type-check": "pnpm -r type-check",
    "test": "pnpm -r test",
    "test:watch": "pnpm -r test --watch",
    "test:coverage": "pnpm -r test --coverage",
    "test:e2e": "pnpm --filter @wikigaialab/web test:e2e",
    "test:unit": "pnpm -r test --testPathPattern=unit",
    "test:integration": "pnpm -r test --testPathPattern=integration",
    "db:start": "supabase start",
    "db:stop": "supabase stop",
    "db:status": "supabase status",
    "db:push": "supabase db push",
    "db:reset": "supabase db reset",
    "db:generate": "supabase gen types typescript --local > packages/database/src/types/supabase.ts",
    "db:seed": "tsx scripts/seed.ts",
    "db:migrate": "supabase migration new",
    "db:test": "node scripts/test-db-connection.js",
    "db:setup": "node packages/database/scripts/setup-database.js",
    "stripe:listen": "stripe listen --forward-to localhost:3000/api/webhooks/stripe",
    "format": "prettier --write .",
    "format:check": "prettier --check .",
    "deploy:staging": "vercel --target staging",
    "deploy:production": "vercel --prod",
    "clean": "pnpm -r clean",
    "setup": "pnpm install && node scripts/setup.js",
    "setup:dev": "node scripts/setup-dev-environment.js",
    "setup:cloud": "node scripts/setup-supabase-cloud.js",
    "setup:no-docker": "node scripts/setup-no-docker.js",
    "test:env": "node scripts/test-environment.js",
    "test:supabase": "node scripts/test-supabase.js",
    "fix:rls": "node scripts/fix-rls-policies.js"
  },
  "dependencies": {
    "@anthropic-ai/sdk": "0.56.0",
    "@supabase/supabase-js": "2.52.0",
    "dotenv": "^17.2.0",
    "openai": "5.10.1",
    "resend": "2.0.0"
  },
  "devDependencies": {
    "@playwright/test": "1.40.0",
    "@sentry/nextjs": "8.47.0",
    "@testing-library/jest-dom": "6.1.4",
    "@testing-library/react": "14.0.0",
    "@testing-library/user-event": "14.5.1",
    "@types/jest": "29.5.7",
    "@typescript-eslint/eslint-plugin": "8.31.0",
    "@typescript-eslint/parser": "8.31.0",
    "@vercel/analytics": "1.1.1",
    "eslint": "9.31.0",
    "eslint-config-next": "15.1.4",
    "eslint-config-prettier": "9.1.0",
    "husky": "9.1.7",
    "jest": "30.0.4",
    "jest-environment-jsdom": "30.0.4",
    "prettier": "3.4.2",
    "prettier-plugin-tailwindcss": "0.6.9",
    "supabase": "2.31.4",
    "ts-jest": "29.2.5",
    "tsx": "4.20.3",
    "typescript": "5.8.3"
  },
  "engines": {
    "node": ">=18.0.0",
    "npm": ">=8.0.0"
  }
}